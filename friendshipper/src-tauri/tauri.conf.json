{
	"$schema": "../node_modules/@tauri-apps/cli/schema.json",
	"build": {
		"beforeBuildCommand": "yarn build",
		"beforeDevCommand": "yarn dev",
		"devPath": "http://localhost:5173",
		"distDir": "../build"
	},
	"package": {
		"productName": "Friendshipper",
		"version": "4.1.14"
	},
	"tauri": {
		"allowlist": {
			"all": false,
			"dialog": {
				"open": true
			},
			"fs": {
				"readFile": true,
				"scope": { "allow": ["*/**"], "requireLiteralLeadingDot": false }
			},
			"shell": {
				"all": false,
				"open": true
			},
			"notification": {
				"all": true
			},
			"window": {
				"show": true
			},
			"process": {
				"relaunch": true
			}
		},
		"bundle": {
			"active": false,
			"category": "DeveloperTool",
			"copyright": "",
			"deb": {
				"depends": []
			},
			"externalBin": [],
			"icon": [
				"icons/32x32.png",
				"icons/128x128.png",
				"icons/128x128@2x.png",
				"icons/icon.icns",
				"icons/icon.ico"
			],
			"identifier": "com.believer.friendshipper",
			"longDescription": "",
			"macOS": {
				"entitlements": null,
				"exceptionDomain": "",
				"frameworks": [],
				"providerShortName": null,
				"signingIdentity": null
			},
			"resources": [],
			"shortDescription": "",
			"targets": "all",
			"windows": {
				"certificateThumbprint": null,
				"digestAlgorithm": "sha256",
				"timestampUrl": ""
			}
		},
		"security": {
			"csp": null
		},
		"systemTray": {
			"iconPath": "icons/32x32.png",
			"iconAsTemplate": true
		},
		"updater": {
			"active": false
		},
		"windows": [
			{
				"fullscreen": false,
				"resizable": true,
				"title": "Friendshipper",
				"minWidth": 980,
				"minHeight": 600,
				"visible": false
			}
		]
	}
}
