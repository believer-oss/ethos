{
	"name": "friendshipper-tauri",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"lint:fix": "prettier --plugin-search-dir . --write . && eslint . --cache --fix",
		"format": "prettier --plugin-search-dir . --write .",
		"postinstall": "cd .. && husky install friendshipper/.husky && cd core/ui && yarn package",
		"tauri:build": "tauri build -v",
		"tauri:build:debug": "tauri build -v --debug",
		"tauri:dev": "tauri dev"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.2.1",
		"@commitlint/config-conventional": "^19.1.0",
		"@sveltejs/adapter-static": "^2.0.3",
		"@sveltejs/kit": "^1.20.4",
		"@tauri-apps/cli": "^1.5.6",
		"@types/node": "^20.11.30",
		"@types/three": "^0.157.2",
		"@typescript-eslint/eslint-plugin": "^6.11.0",
		"@typescript-eslint/parser": "^6.11.0",
		"autoprefixer": "^10.4.14",
		"eslint": "^8.28.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-airbnb-typescript": "^17.1.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-eslint-comments": "^3.2.0",
		"eslint-plugin-import": "^2.29.0",
		"eslint-plugin-promise": "^6.1.1",
		"eslint-plugin-svelte": "^2.30.0",
		"flowbite": "^1.8.1",
		"flowbite-svelte": "^0.44.18",
		"husky": "^8.0.3",
		"postcss": "^8.4.24",
		"postcss-load-config": "^4.0.1",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.10.1",
		"svelte": "^4.2.8",
		"svelte-check": "^3.4.3",
		"svelte-highlight": "^7.4.8",
		"tailwindcss": "^3.3.2",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^4.5.2"
	},
	"type": "module",
	"dependencies": {
		"@ethos/core": "link:../core/ui",
		"@okta/okta-auth-js": "^7.8.1",
		"@tauri-apps/api": "^1.5.1",
		"@threlte/core": "^6.1.0",
		"@threlte/extras": "^7.3.0",
		"dayjs": "^1.11.10",
		"flowbite-svelte-icons": "^1.6.1",
		"jwt-decode": "^4.0.0",
		"semver": "^7.5.4",
		"tailwind-merge": "^2.0.0",
		"three": "^0.157.0"
	},
	"lint-staged": {
		"**/*.{js,jsx,svelte,ts,tsx}": "npx eslint --cache --fix",
		"**/*.{js,jsx,svelte,ts,tsx,css,scss,md,json}": "npx prettier --write --ignore-unknown"
	}
}
