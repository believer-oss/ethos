{
	"$schema": "../node_modules/@tauri-apps/cli/schema.json",
	"build": {
		"beforeBuildCommand": "yarn build",
		"beforeDevCommand": "yarn dev",
		"devPath": "http://localhost:5173",
		"distDir": "../build"
	},
	"package": {
		"productName": "Birdie",
		"version": "1.2.4"
	},
	"tauri": {
		"allowlist": {
			"all": false,
			"dialog": {
				"open": true
			},
			"fs": {
				"readFile": true,
				"writeFile": true,
				"exists": true,
				"scope": ["*/**"]
			},
			"path": {
				"all": true
			},
			"shell": {
				"all": false,
				"open": true
			},
			"notification": {
				"all": true
			},
			"window": {
				"all": false,
				"close": true,
				"hide": true,
				"show": true,
				"maximize": true,
				"minimize": true,
				"unmaximize": true,
				"unminimize": true,
				"startDragging": true
			},
			"process": {
				"relaunch": true
			}
		},
		"bundle": {
			"active": true,
			"category": "DeveloperTool",
			"copyright": "",
			"deb": {
				"depends": []
			},
			"externalBin": [],
			"icon": [
				"icons/32x32.png",
				"icons/128x128.png",
				"icons/128x128@2x.png",
				"icons/icon.icns",
				"icons/icon.ico"
			],
			"identifier": "com.believer.birdie",
			"longDescription": "",
			"macOS": {
				"entitlements": null,
				"exceptionDomain": "",
				"frameworks": [],
				"providerShortName": null,
				"signingIdentity": null
			},
			"resources": [],
			"shortDescription": "",
			"targets": ["msi", "dmg", "deb", "rpm", "updater"],
			"windows": {
				"certificateThumbprint": null,
				"digestAlgorithm": "sha256",
				"timestampUrl": ""
			}
		},
		"security": {
			"csp": null
		},
		"systemTray": {
			"iconPath": "icons/32x32.png",
			"iconAsTemplate": true
		},
		"updater": {
			"active": true,
			"endpoints": ["https://github.com/believer-oss/ethos/releases/latest/download/birdie.json"],
			"dialog": false,
			"pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEMxODk1OTAyOTMzQjk0MTEKUldRUmxEdVRBbG1Kd1FMdHNlc21rQ3UwTXQ3MStJL2VZYnBUYnhuYkxteStHQ0hTeXNQNFVZS20K",
			"windows": {
				"installMode": "passive"
			}
		},
		"windows": [
			{
				"fullscreen": false,
				"resizable": true,
				"title": "Birdie",
				"minWidth": 1250,
				"minHeight": 900,
				"visible": false,
				"decorations": false,
				"transparent": true,
				"fileDropEnabled": false
			}
		]
	}
}
